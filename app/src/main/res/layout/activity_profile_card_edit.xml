<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ProfileCardEditActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0097a7">

        <FrameLayout
            android:id="@+id/btnBack"
            style="@style/Widget.AppCompat.Light.ActionButton.CloseMode"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="left">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back_white_24dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="56dp"
            android:gravity="center_vertical"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/btnCheck"
            style="@style/Widget.AppCompat.Light.ActionButton.CloseMode"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check_white_24dp" />
        </FrameLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="25dp">

            <com.dd.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_cornerRadius="10dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="#66000000"
                app:sl_shadowRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:layout_gravity="top"
                        android:background="@drawable/profile_cards_user_edit_avatar" />

                    <FrameLayout
                        android:id="@+id/btnName"
                        style="@style/Widget.AppCompat.Light.ActionButton.CloseMode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="232"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="left"
                                android:text="Richard Murphy"
                                android:textColor="@color/fontColor"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/tvPosition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/white"
                                android:text="Business Development Manager"
                                android:textColor="@color/fontColor"
                                android:textSize="@dimen/font_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="4dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_more_vert" />

                            <ImageView
                                android:layout_width="3.44dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_more_vert_black_24dp"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@android:color/white">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="#b3b3b3" />
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/dien_thoai" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/tvPhoneNumber1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/white"
                                    android:text="+44 0 208 836 5510"
                                    android:textColor="@color/fontColor"
                                    android:textSize="@dimen/font_size" />

                                <EditText
                                    android:id="@+id/tvPhoneNumber2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@android:color/white"
                                    android:text="+44 0 7986 222 222"
                                    android:textColor="@color/fontColor"
                                    android:textSize="@dimen/font_size" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="#37474f" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="#b3b3b4" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/hop_thu" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/tvMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/white"
                                android:text="richardmurphy@gsk.com"
                                android:textColor="@color/fontColor"
                                android:textSize="@dimen/font_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="#b3b3b4" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/a" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/tvWebsite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/white"
                                android:text="www.gsk.com"
                                android:textColor="@color/fontColor"
                                android:textSize="@dimen/font_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="#b3b3b4" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/location" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/white"
                                android:text="GlaxoSmithKline..."
                                android:textColor="@color/fontColor"
                                android:textSize="@dimen/font_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="#b3b3b4" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/in" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/tvLinkedProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/white"
                                android:text="Linkedin Profile"
                                android:textColor="@color/fontColor"
                                android:textSize="@dimen/font_size" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="#b3b3b4" />
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:background="@drawable/rectangle_background_border_radius">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/profile_cards_user_edit_logo" />
                    </FrameLayout>
                </LinearLayout>
            </com.dd.ShadowLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
