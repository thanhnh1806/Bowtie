<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context="com.bowtie.View.ProfileCardDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="#f9f9f9"
            android:paddingBottom="@dimen/_30sdp">

            <com.dd.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sl_cornerRadius="10dp"
                app:sl_dx="0dp"
                app:sl_dy="0dp"
                app:sl_shadowColor="@color/shadow_color"
                app:sl_shadowRadius="@dimen/shadow_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_background_white_border_radius"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_162sdp"
                        android:layout_gravity="top"
                        android:background="@drawable/rectangle_background_border_radius_top">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/ivAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            fresco:placeholderImage="@drawable/profile_cards_user_avatar"
                            fresco:roundBottomLeft="false"
                            fresco:roundBottomRight="false"
                            fresco:roundedCornerRadius="14dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnName"
                        style="@style/Widget.AppCompat.Light.ActionButton.CloseMode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="left"
                                android:text="Richard Murphy"
                                android:textColor="@color/fontColor"
                                android:textSize="19.5sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvPosition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Business Development Manager"
                                android:textColor="@color/fontColor"
                                android:textSize="13.5sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="7dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="4dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_more_vert" />

                            <ImageView
                                android:layout_width="3.44dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_more_vert_black_24dp"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="@android:color/white">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line_height"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/dividers" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/dien_thoai" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPhoneNumber1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="+44 0 208 836 5510"
                                    android:textColor="@color/fontColor" />

                                <TextView
                                    android:id="@+id/tvPhoneNumber2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="+44 0 7986 222 222"
                                    android:textColor="@color/fontColor" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="#37474f" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="@color/dividers" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/hop_thu" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvMail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="richardmurphy@gsk.com"
                                android:textColor="@color/fontColor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="@color/dividers" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/a" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvWebsite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="www.gsk.com"
                                android:textColor="@color/fontColor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="@color/dividers" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/location" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="GlaxoSmithKline..."
                                android:textColor="@color/fontColor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="@color/dividers" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:background="@android:color/white"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="@dimen/row_height"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/in" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvLinkedProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="Linkedin Profile"
                                android:textColor="@color/fontColor" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/line_height"
                                android:layout_gravity="bottom"
                                android:background="@color/dividers" />
                        </FrameLayout>
                    </LinearLayout>

                    <include layout="@layout/logo_bottom" />
                </LinearLayout>
            </com.dd.ShadowLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
